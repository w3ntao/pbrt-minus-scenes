MakeNamedMedium "fog"
    "string type" [ "homogeneous" ]
    "float scale" [ 0.0015 ]
    "rgb sigma_a" [ 0.005 0.005 0.005 ]
    "rgb sigma_s" [ 1 1 1 ]

MediumInterface "" "fog"

LookAt 278 278 -800  278 278 0   0 1 0

Camera "perspective" "float fov" [37.5]

Film "rgb"
    "string filename" ["cornell-box-specular-volume.png"]
    "integer xresolution" [ 1080 ]
    "integer yresolution" [ 1080 ]

Integrator "path"
    "integer maxdepth" [ 10 ]

WorldBegin

# color grey
Material "diffuse"
    "rgb reflectance" [ 0.73 0.73 0.73 ]

# light source
AttributeBegin
   AreaLightSource "diffuse"
   "rgb L" [108 76 24]

   Shape "trianglemesh"
   "integer indices" [ 0 1 2  2 3 0 ]
   "point3 P" [
      343.0 555.9 227.0
      343.0 555.9 332.0
      213.0 555.9 332.0
      213.0 555.9 227.0 ]
AttributeEnd

#red wall
