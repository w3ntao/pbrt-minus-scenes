# sphere
AttributeBegin
MediumInterface "" "fog"

Material "dielectric"
    "bool remaproughness" [ false ]
    #"float vroughness" [ 0.01 ]
    #"float uroughness" [ 0.01 ]

    Translate 186 90 168
    Shape "sphere"
        "float radius" [ 90 ]
